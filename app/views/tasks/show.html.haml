#jobs
  .job
    %h1= @task.title
    %p= @task.description
    %p= @task.company
    %button.btn.btn-light= link_to "Complete Task", @task.url

#links
  = link_to 'Home', root_path, class: "btn btn-sm btn-light"
  = link_to 'Edit', edit_task_path(@task), class: "btn btn-sm btn-light"
  = link_to 'Delete', tasks_path(@task), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-light"
