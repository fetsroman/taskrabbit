!!!
%html
%head
  %title TaskRabbit
  = csrf_meta_tags
  = csp_meta_tag

  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
  = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

%body
  %nav.navbar.navbar-expand-lg.navbar-light.bg-light
    .container
      .navbar-brand TaskRabbit
      %ul.navbar-nav
        %li= link_to "All Tasks", root_path, class: "nav-link"
        - Category.all.each do |category|
          %li= link_to category.name, tasks_path(category: category.name), class: "nav-link"
      = link_to "New Task", new_task_path, class: "navbar-text navbar-right navbar-link"
      
  .container
    .col-md-8.col-md-offset-2
      = yield
